<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" tools:ignore="MissingConstraints" android:layout_marginTop="50dp">

    <!-- Label -->


    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" tools:ignore="MissingConstraints" android:text="Température: " android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:id="@+id/edit_view1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="201dp" tools:ignore="MissingConstraints" android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:id="@+id/edit_text1" android:inputType="numberDecimal" android:hint=""/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" tools:ignore="MissingConstraints" android:text="°C" android:layout_marginLeft="5dp" android:layout_marginStart="5dp" android:id="@+id/edit_view2"/>

</LinearLayout>


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="50dp" android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:layout_marginBottom="50dp" android:layout_margin="50dp">


    <RadioGroup android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/rd">

    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" tools:ignore="MissingConstraints" android:text="Degré Celsius" android:id="@+id/radio1" android:checked="true"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" tools:ignore="MissingConstraints" android:text="Degré Fahrenheit" android:id="@+id/radio2"/>

</RadioGroup>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" tools:ignore="MissingConstraints" android:layout_marginBottom="50dp">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="CONVERTIR" android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:id="@+id/b1" app:backgroundTint="#ACA9A9" android:textColor="#090909" android:onClick="convert"/>

</LinearLayout>


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">


    <LinearLayout android:layout_height="57dp" android:layout_width="match_parent" android:orientation="horizontal" tools:ignore="MissingConstraints">

    <TextView android:layout_height="match_parent" android:layout_width="338dp" tools:ignore="MissingConstraints" android:text=" " android:layout_marginLeft="30dp" android:layout_marginStart="30dp" android:id="@+id/edit_view3" android:layout_marginRight="20dp" android:layout_marginEnd="20dp"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>